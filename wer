'''Application - buidlding a GUI'''
from tkinter import *

window = Tk()  # create a window


def func():
    r = round(float(e1_value.get())*1.6, 2)
    t1.insert(END, r)
    t1.insert(END,'\n' )

b1 = Button(window, text = 'Execute', command=func)  # no brackets for func
b1.grid(row=0, column=0) # set location of widget

e1_value = StringVar()  # set type of value
e1 = Entry(window, textvariable = e1_value)
e1.grid(row=0, column = 1)

t1 = Text(window, height=10, width=20)
t1.grid(row=0, column=2)

    
    
window.mainloop()  #display the created window
